{
  "manifest_version": 3,
  "name": "OG Card Generator",
  "version": "1.2",
  "description": "Fetch OG data or generate faux cards for email sharing",
  "permissions": ["clipboardWrite", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate OG Card"
  }
}